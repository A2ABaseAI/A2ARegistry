# A2A Agent Registry Configuration

# Application
APP_NAME="A2A Agent Registry"
APP_VERSION="1.0.0"
DEBUG=false
TEST_MODE=false

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/a2a_registry"

# Redis
REDIS_URL="redis://localhost:6379/0"

# Elasticsearch
ELASTICSEARCH_URL="http://localhost:9200"
ELASTICSEARCH_INDEX="a2a_agents"

# Security
SECRET_KEY="your-secret-key-change-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Key Authentication (Bearer token)
# Configure allowed API keys and default roles for API key authentication
API_KEYS=["dev-admin-api-key"]
API_KEY_HASHES=[]  # Optional: SHA-256 hashes of API keys instead of plaintext
API_KEY_DEFAULT_ROLES=["Administrator","User"]  # Roles assigned to API key authenticated requests
API_KEY_DEFAULT_TENANT="default"

# OAuth2
OAUTH2_CLIENT_ID="a2a-registry"
OAUTH2_CLIENT_SECRET="your-oauth2-secret"
OAUTH2_TOKEN_URL="http://localhost:8000/oauth/token"

# Registry
REGISTRY_BASE_URL="http://localhost:8000"
MAX_AGENTS_PER_CLIENT=1000
SEARCH_TIMEOUT_SECONDS=30

# Federation
ENABLE_FEDERATION=true
MAX_PEER_REGISTRIES=10
PEER_SYNC_INTERVAL_MINUTES=60
